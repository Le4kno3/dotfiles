_zsh_greeting() {
    if [ "$(uname)" = "Linux" ]; then
        shello.sh || true
    elif [ "$(uname)" = "Darwin" ]; then
        printf "And again. The Os of agony: macOS\n"
    else
        printf "Okay cool. Something different: \033[1;36m%s\n\033[0m" "$(uname)"
    fi
}
