source "gpg -dq $HOME/.my-pwds.gpg |"
set editor=`echo \$EDITOR`
set charset = "utf-8"
set sidebar_visible = "yes"
set mailcap_path = "$HOME/.config/neomutt/mailcap"
auto_view text/html
alternative_order text/enriched text/plain text/html text

