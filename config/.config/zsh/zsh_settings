export EDITOR=/usr/bin/vim
export SCRIPT_DIR=$HOME/Documents/scripts
export PATH="$HOME/.local/bin:$PATH:/usr/lib/plan9/bin"

#     __              
#    / /__  __________
#   / / _ \/ ___/ ___/
#  / /  __(__  |__  ) 
