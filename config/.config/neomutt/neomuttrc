set realname = "Oliver Wiegers"
set from = "oliver.wiegers@gmail.com"
set use_from = yes
set envelope_from = yes

#       _____ __  _____________ 
#      / ___//  |/  /_  __/ __ \
#      \__ \/ /|_/ / / / / /_/ /
#     ___/ / /  / / / / / ____/ 
#    /____/_/  /_/ /_/ /_/      

set smtp_url = "smtps://oliver.wiegers@gmail.com@smtp.gmail.com:465/"
set smtp_pass = "$my_pass"
# Gmail does automatically save to "+[Gmail]/Send"
unset record

#        ______  ______    ____ 
#       /  _/  |/  /   |  / __ \
#       / // /|_/ / /| | / /_/ /
#     _/ // /  / / ___ |/ ____/ 
#    /___/_/  /_/_/  |_/_/      

mailboxes = "+INBOX"
unset imap_passive
set imap_user = "oliver.wiegers@gmail.com"
set imap_pass = "$my_pass"
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set ssl_force_tls = yes
set imap_check_subscribed
set header_cache = ~/.cache/mutt
set message_cachedir = "~/.cache/mutt"
set postponed = +[Gmail]/Drafts
set imap_keepalive = 300
set mail_check = 120

#        __    _           ___                 
#       / /_  (_)___  ____/ (_)___  ____ ______
