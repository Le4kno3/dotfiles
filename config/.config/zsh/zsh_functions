if [ "$(uname)" = "Darwin" ]; then
    if [ "$(whoami)" = owiegers ]; then
        hp() {
            git commit -am "$@"
            git pull
            git push
        }

    daily() {
        current_pwd=$PWD
        cd "$HOME/Documents/notes/sys11/resources/daily" || exit 1
        today_daily="$(date +%d.%m.%Y).md"
        if [ -f "${today_daily}" ]; then
            vim "${today_daily}"
        else
            last_daily="$(ls -1 | sort -n -t'.' -k3 -k2 -k1 | tail -n1)" 
            cp "${last_daily}" "${today_daily}"
            vim "${today_daily}"
        fi
        cd "${current_pwd}" || exit 1
    }
    fi
fi

