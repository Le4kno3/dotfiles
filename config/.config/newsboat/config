auto-reload yes
reload-time 120
reload-threads 4
download-retries 4
download-timeout 10
prepopulate-query-feeds yes

#        __            __  
#       / /___  ____  / /__
#      / / __ \/ __ \/ //_/
#     / / /_/ / /_/ / ,<   
#    /_/\____/\____/_/|_|  

show-read-feeds yes
feed-sort-order unreadarticlecount-asc

color info cyan default reverse
color listnormal_unread yellow default
color listfocus red default reverse bold
color listfocus_unread red default reverse bold

text-width 80
                                                       
